{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranches": ["dev"],
  "dependencyDashboard": true,
  "labels": ["dependencies"],
  "branchPrefix": "deps/",
  "extends": [
    "config:base"
  ],
  "reviewers": [
    "RainbowDashLabs"
  ],
  "prConcurrentLimit": 3,
  "prHourlyLimit": 10,
  "packageRules": [
    {
      "matchDepNames": ["gradle", "maven", "com.diffplug.spotless"],
      "automerge": true,
      "squash": true
    }
  ]
}
